<main>
    <%
=begin%>
 <div id="carouselSlides" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <% @images.each do |image| %>
                <div class="carousel-item">
                    <%= image_tag(image, class: 'd-block w-100') %>
                </div>
            <% end %>
            <script>
                $('.carousel-item').first().addClass('active');
            </script>
        </div>
        
    </div> 
<%
=end%>
    <div class="embed-responsive embed-responsive-16by9">
        <%= image_tag('portfolio.jpg' , class: 'embed-responsive-item hero') %>
    </div>
    <h2 class='m-5'>Here are some screenshots of little ruby projects I did throughout my course:</h2>
    <div id='projects' class='d-flex flex-wrap justify-content-center'>
        <% @projects.each do |project| %>
            <a class="project p-5" href="#">
                <div class="thumbnail">
                    <%= image_tag project.image %>
                </div>
                <div class="pt-3 px-3">
                    <h3><%= project.title %></h3>
                    <p><%= project.description %></p>
                </div>
            </a>
        <% end %>
    <div>
</main>
